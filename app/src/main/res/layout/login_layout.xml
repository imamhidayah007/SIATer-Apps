<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/gambarSiater"
        android:layout_width="210dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/siaterh" />



    <EditText
        android:id="@+id/l_npm"
        android:drawableLeft="@drawable/ic_action_person"
        android:hint="NPM"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:textColorHint="#7e8076"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:layout_below="@+id/gambarSiater"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/l_password"
        android:textColor="#ffffff"
        android:textColorHint="#7e8076"
        android:hint="Password"
        android:drawableLeft="@drawable/ic_action_password2"
        android:background="#11000000"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:layout_alignLeft="@+id/l_npm"
        android:layout_alignStart="@+id/l_npm"
        android:layout_below="@+id/l_npm"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rectangle_pink"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/l_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Login" />



    <TextView
        android:id="@+id/txt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:text="Belum Punya Akun? Silakan Register" />



    <TextView
        android:id="@+id/txt_bantuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:text="Butuh Bantuan?" />

</RelativeLayout>
</ScrollView>